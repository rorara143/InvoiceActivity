<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.vitin.mylaptop.invoiceactivity.MainActivity">

    <TextView
        android:id="@+id/subtotalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/discountPercentTextView"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/discountPercentTextView"
        android:layout_marginTop="21dp"
        android:text="Subtotal"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:textColor="@color/colorPrimaryDark" />

    <EditText
        android:id="@+id/subtotalEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/subtotalLabel"
        android:layout_alignBottom="@+id/subtotalLabel"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/discountPercentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/discountAmountTextView"
        android:layout_alignStart="@+id/discountAmountTextView"
        android:layout_below="@+id/subtotalEditText"
        android:text="Discount Percent"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/totalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/discountPercentLabel"
        android:layout_alignRight="@+id/discountPercentLabel"
        android:layout_below="@+id/discountAmountTextView"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="22dp"
        android:text="$0.00"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/totalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/totalLabel"
        android:layout_alignEnd="@+id/subtotalLabel"
        android:layout_alignRight="@+id/subtotalLabel"
        android:layout_alignTop="@+id/totalLabel"
        android:text="Total"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/discountAmountLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/discountPercentLabel"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/discountAmountTextView"
        android:layout_toRightOf="@+id/discountAmountTextView"
        android:text="$0.00"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/discountPercentLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/discountAmountLabel"
        android:layout_alignStart="@+id/discountAmountLabel"
        android:layout_below="@+id/subtotalEditText"
        android:text="0%"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/discountAmountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/discountAmountLabel"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:text="Discount Amount"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>